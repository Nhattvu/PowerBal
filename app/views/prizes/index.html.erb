<script>
    currentRubies = parseInt(window.localStorage.getItem("rubies"));
    document.getElementById("count").innerHTML = currentRubies;
    checkRubies();

    function checkRubies() {
        if (currentRubies < 500) {
            hidePrize1();
            hidePrize2();
            hidePrize3();
        }
        if (currentRubies >= 500 && currentRubies < 1000) {
            showPrize1();
            hidePrize2();
            hidePrize3();
        }
        if (currentRubies >= 1000 && currentRubies < 1500) {
            showPrize1();
            showPrize2();
            hidePrize3();
        }
        if (currentRubies >= 1500) {
            showPrize1();
            showPrize2();
            showPrize3();
        }
    }

    function showPrize1() {
        const msg = document.getElementById("prize1");
        msg.style.display = "block";
        const msg2 = document.getElementById("noprize1");
        msg2.style.display = "none";
    }

    function showPrize2() {
        const msg = document.getElementById("prize2");
        msg.style.display = "block";
        const msg2 = document.getElementById("noprize2");
        msg2.style.display = "none";
    }

    function showPrize3() {
        const msg = document.getElementById("prize3");
        msg.style.display = "block";
        const msg2 = document.getElementById("noprize3");
        msg2.style.display = "none";
    }

    function hidePrize1() {
        const msg = document.getElementById("prize1");
        msg.style.display = "none";
        const msg2 = document.getElementById("noprize1");
        msg2.style.display = "block";
    }

    function hidePrize2() {
        const msg = document.getElementById("prize2");
        msg.style.display = "none";
        const msg2 = document.getElementById("noprize2");
        msg2.style.display = "block";
    }

    function hidePrize3() {
        const msg = document.getElementById("prize3");
        msg.style.display = "none";
        const msg2 = document.getElementById("noprize3");
        msg2.style.display = "block";
    }

    function redeemRubies (amt) {
        currentRubies -= amt;
        window.localStorage.setItem("rubies",currentRubies);
        alert("You now have: " + currentRubies + " Rubies.");
        window.location.reload();
    }

</script>